<h1>Login</h1>

<%= form_tag(login_path, method: :post, data: { turbo: false }) do %>
  <div>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>

<%= link_to "Back to Home", root_path %>
