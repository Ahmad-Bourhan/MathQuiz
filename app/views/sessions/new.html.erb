<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %> <!-- instead of email_field_tag -->
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>


<%= link_to "Back to Home", root_path %>
